<div id="contatos" class="parallax-container valign-wrapper">               
    @*<div class="section">*@
        <div class="container">
            <div class="row center">
            <div class="col s12 m3 l3"></div>
                <form id="contato" method="get" action="~/Home/Create">
                    <div class="col s12 m10 l12">
                        <h4 class="center black-text">Entre em Contato</h4>
                        <p class="center-align black-text">Escreva para UNPAPER preenchendo o formulário abaixo:</p>
                        <div class="input-field col s12">
                            <i class="material-icons prefix center-align">account_circle</i>
                            <input type="text" id="nome" name="nome" class="validate center-align" required>
                            <label for="icon_prefix">Nome</label>
                        </div>
                        <div class="input-field col s6">
                            <i class="material-icons prefix">phone_iphone</i>
                            <input type="tel" id="telefone" name="telefone" class="validate" required>
                            <label for="icon_telephone">Telefone</label>
                        </div>
                        <div class="input-field col s6">
                            <i class="material-icons prefix">email</i>
                            <input id="email" type="email" name="email" class="validate" required>
                            <label for="icon_email">Email</label>
                        </div>
                        <div class="input-field col s12">
                            <i class="material-icons prefix">format_align_justify</i>
                            <input id="assunto" type="text" name="assunto" class="validate" required>
                            <label for="icon_assunto">Assunto</label>
                        </div>
                        <div class="input-field col s12 center-align">
                            <button type="submit" id="btnEnviar" value="ENVIAR" title="Enviar" class="btn btn-floating btn-large blue pulse"><i class="material-icons">near_me</i></button>
                        </div>
                         
                    </div>
                    <div class="col s12 m6 l3"></div>
                </form>
        </div>         
    </div>
